<!DOCTYPE html>
<html class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">

    <title>{ifset title}{include title|stripHtml} | {/ifset}Nette Web</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>

<body class="d-flex flex-column h-100">

{*<div>*}
{*    <a n:href="Events:" >Default</a>*}
{*    <a n:href="Events:database" >Database</a>*}
{*    <a n:href="Events:form" >Form</a>*}
{*</div>*}





<nav class="navbar navbar-expand navbar-light bg-light sticky-top">

        <div class="container-fluid {if !$user->isLoggedIn()}justify-content-end{/if}">
            {if $user->isLoggedIn()}
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" n:href="Events:">Default</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" n:href="Events:database">Database</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" n:href="Events:form">Form</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" n:href="Events:pdf">Pdf</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" n:href="Events:curl">cURL</a>
                    </li>

                </ul>
            {/if}
            <div class="d-flex align-items-center">
                <ul class="navbar-nav">
                    {if $user->isLoggedIn()}
                        <li class="nav-item"><a class="nav-link" n:href="Sign:out">Odhlásit</a></li>
                    {else}
                        <li class="nav-item"><a class="nav-link" n:href="Sign:in">Přihlásit</a></li>
                    {/if}
                </ul>
            </div>
        </div>
</nav>





<div n:foreach="$flashes as $flash" n:class="flash, $flash->type" >{$flash->message}</div>

	{include content}


        <footer class="text-center mt-auto text-white" style="background-color: #0a4275;">
            <div n:if="$user->isLoggedIn()" class="container ">
                <section>
                    <div class="d-flex justify-content-center align-items-center ">
                        <a class="nav-link mx-2 text-white" n:href="Events:">Default</a>
                        <a class="nav-link mx-2 text-white" n:href="Events:database">Database</a>
                        <a class="nav-link mx-2 text-white" n:href="Events:form">Form</a>
                        <a class="nav-link mx-2 text-white" n:href="Events:pdf">Pdf</a>
                        <a class="nav-link mx-2 text-white" n:href="Events:curl">cURL</a>
                    </div>
                </section>
            </div>
            <div class="text-center p-3" style="background-color: rgba(0,0,0,0.2);">
                @ 2023 Copyright:
                <a class="text-white" n:href="Events:">project.local.cz</a>
            </div>
        </footer>


	{block scripts}
    <script src="https://nette.github.io/resources/js/3/netteForms.min.js"></script>
{/block}
</body>
</html>
